{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{ user `aws_access_key` }}",
      "secret_key": "{{ user `aws_secret_key` }}",
      "region": "us-east-1",
      "source_ami": "ami-819a63ea",
      "instance_type": "t2.micro",
      "ssh_username": "admin",
      "ami_name": "headless-cameraman (built by packer {{timestamp}})"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "provision.sh"
      ]
    }
  ],

  "post-processors": [
    {
      "type": "amazon-import",
      "access_key": "{{ user `aws_access_key` }}",
      "secret_key": "{{ user `aws_secret_key` }}",
      "region": "us-east-1",
      "s3_bucket_name": "zoomforth-amis",
      "tags": {
        "Description": "headless-cameraman (packer amazon-import {{timestamp}})"
      }
    }
  ]

}
